// Declaración de constantes
#define ledPin 13              // Pin al que está conectado el LED
#define tiempoEncendido 1000  // Tiempo que permanece encendido (milisegundos)
#define tiempoApagado 1000    // Tiempo que permanece apagado (milisegundos)

void setup() {
  pinMode(ledPin, OUTPUT);    // Configura el pin como salida
}

void loop() {
  digitalWrite(ledPin, HIGH);  // Enciende el LED
  delay(tiempoEncendido);      // Espera 1 segundo
  digitalWrite(ledPin, LOW);   // Apaga el LED
  delay(tiempoApagado);        // Espera 1 segundo
}
